<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sami.hangman_v10.GameRulesActivity"
    android:weightSum="1">

    <fragment
        android:id="@+id/TopFragment"
        android:name="com.example.sami.hangman_v10.TopFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/top_fragment" />

    <TextView
        android:id="@+id/instructionsview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_weight="0.14"
        android:text="@string/instructions" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.72"
        app:srcCompat="@mipmap/gameplay" />

</LinearLayout>
